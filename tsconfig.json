{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/*.spec.ts"
  ]
}
